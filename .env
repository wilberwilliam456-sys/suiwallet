
# Flask & Security Settings
FLASK_ENV=production
SECRET_KEY=your-very-secure-random-key
JWT_SECRET=your-jwt-secret-key
FERNET_KEY=your-generated-fernet-key-base64

# Database (use sqlite by default)
DATABASE_URL=sqlite:///wallet.db
# Example PostgreSQL: postgresql+psycopg2://user:password@db:5432/walletdb

# Blockchain Network (Default: TESTNET)
# Choices: mainnet | testnet | devnet

NETWORK=testnet

# Flask Server
HOST=0.0.0.0
PORT=5000

# Logging & CORS
CORS_ORIGINS=*
LOG_LEVEL=info
